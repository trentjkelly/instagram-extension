{
    "manifest_version": 3,
    "name": "InstaFocus: Control Your Feed",
    "description": "Block addictive features on your Instagram page",
    "version": "1.0.0",
    "author": "Trent Kelly",
    "action": {
        "default_popup": "index.html",
        "default_title": "InstaFocus: Control Your Feed"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage"
    ],
    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png",
        "512": "icons/512.png"
      }
}